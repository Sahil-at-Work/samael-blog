<style>
	header {
		margin: 0;
		padding: 1em;
		background: rgba(15, 23, 42, 0.9);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(139, 92, 246, 0.2);
		position: sticky;
		top: 0;
		z-index: 1000;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo h2 {
		margin: 0;
		font-size: 1.5em;
		font-family: 'Nova Mono', monospace;
	}

	.logo a {
		text-decoration: none;
		color: #F8FAFC;
		background: linear-gradient(45deg, #8B5CF6, #6D28D9);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		text-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
		transition: text-shadow 0.3s ease;
	}

	.logo a:hover {
		text-shadow: 0 0 30px rgba(139, 92, 246, 0.5);
	}

	.nav-links {
		display: flex;
		gap: 2em;
		align-items: center;
	}

	.nav-links a {
		color: #E2E8F0;
		text-decoration: none;
		font-size: 1.1em;
		padding: 0.5em 1em;
		border-radius: 8px;
		transition: all 0.3s ease;
		position: relative;
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 50%;
		width: 0;
		height: 2px;
		background: #8B5CF6;
		transition: all 0.3s ease;
		transform: translateX(-50%);
	}

	.nav-links a:hover {
		color: #F8FAFC;
		background: rgba(139, 92, 246, 0.1);
	}

	.nav-links a:hover::after {
		width: 80%;
	}

	.nav-links a.active {
		color: #8B5CF6;
		font-weight: bold;
	}

	.nav-links a.active::after {
		width: 80%;
	}

	.social-links {
		display: flex;
		gap: 1.5em;
		align-items: center;
	}

	.social-links a {
		color: #E2E8F0;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
	}

	.social-links a:hover {
		color: #8B5CF6;
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		nav {
			flex-direction: column;
			gap: 1em;
			text-align: center;
		}

		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
			gap: 1em;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>