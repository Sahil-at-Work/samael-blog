<style>
	footer {
		padding: 3em 1em;
		background: linear-gradient(to top, rgba(15, 23, 42, 0.95), rgba(15, 23, 42, 0.8));
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(139, 92, 246, 0.2);
		position: relative;
		overflow: hidden;
	}

	/* Star field effect */
	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(1px 1px at 20px 30px, rgba(255, 255, 255, 0.8), rgba(0,0,0,0)),
			radial-gradient(1px 1px at 40px 70px, rgba(255, 255, 255, 0.8), rgba(0,0,0,0)),
			radial-gradient(1px 1px at 50px 160px, rgba(255, 255, 255, 0.8), rgba(0,0,0,0)),
			radial-gradient(1px 1px at 80px 120px, rgba(255, 255, 255, 0.8), rgba(0,0,0,0)),
			radial-gradient(1px 1px at 110px 130px, rgba(255, 255, 255, 0.8), rgba(0,0,0,0));
		background-repeat: repeat;
		background-size: 200px 200px;
		opacity: 0.1;
		animation: twinkle 4s ease-in-out infinite;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2em;
	}

	.footer-text {
		text-align: center;
	}

	.copyright {
		color: #E2E8F0;
		font-size: 0.9em;
		margin: 0;
		font-family: 'Nova Mono', monospace;
	}

	.tagline {
		color: #94A3B8;
		font-size: 0.85em;
		margin: 0.5em 0 0 0;
		font-style: italic;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 2em;
	}

	.social-link {
		color: #E2E8F0;
		transition: all 0.3s ease;
		padding: 0.5em;
		border-radius: 50%;
		background: rgba(139, 92, 246, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.social-link:hover {
		color: #8B5CF6;
		transform: translateY(-4px);
		background: rgba(139, 92, 246, 0.2);
		box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);
	}

	.instagram:hover {
		color: #E4405F;
		box-shadow: 0 4px 20px rgba(228, 64, 95, 0.3);
	}

	.github:hover {
		color: #F8FAFC;
		box-shadow: 0 4px 20px rgba(248, 250, 252, 0.3);
	}

	.linkedin:hover {
		color: #0A66C2;
		box-shadow: 0 4px 20px rgba(10, 102, 194, 0.3);
	}

	@keyframes twinkle {
		0%, 100% { opacity: 0.1; }
		50% { opacity: 0.2; }
	}

	@media (max-width: 768px) {
		footer {
			padding: 2em 1em;
		}

		.social-links {
			gap: 1.5em;
		}

		.copyright {
			font-size: 0.8em;
		}

		.tagline {
			font-size: 0.75em;
		}
	}
</style>